{
    "manifest_version": 3, 
    "name": "My Extension", 
    "version": "1.0", 
    "description": "A short description of the extension", 
    "permissions": [
      "storage", 
      "tabs"
    ],
    "background": {
      "service_worker": "background.js" 
    },
    "action": {
      "default_popup": "popup/popup.html", 
      "default_icon": {
        "16": "icons/icon16.png" 
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"], 
        "js": ["content_scripts/content.js"]
      }
    ],
    "host_permissions": [
      "http://*/*", "https://*/*" 
    ],
    "icons": {
      "16": "icons/icon16.png"
    }
  }